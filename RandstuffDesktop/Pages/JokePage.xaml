<Page x:Class="RandstuffDesktop.Pages.JokePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Background="#E8F5E9"
      FontFamily="Segoe UI">

    <StackPanel Width="400" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="20">
        <TextBlock Text="Генератор шуток" 
                   FontSize="24" 
                   FontWeight="Bold" 
                   Foreground="Black" 
                   Margin="0,0,0,20"
                   HorizontalAlignment="Center"/>
        <Button Style="{StaticResource RoundedButton}" Content="Сгенерировать" 
                Background="#A5D6A7" Foreground="Black" Padding="10" BorderThickness="0" Cursor="Hand" Click="GenerateButton_Click"/>
        <TextBox x:Name="ResultTextBox" Margin="0,20,0,0" FontSize="16" 
                 IsReadOnly="True" TextWrapping="Wrap" Height="150" VerticalScrollBarVisibility="Auto" />
    </StackPanel>
</Page>
