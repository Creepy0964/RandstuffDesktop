<Page x:Class="RandstuffDesktop.Pages.TicketPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Background="#E8F5E9"
      FontFamily="Segoe UI">

    <StackPanel Margin="20" HorizontalAlignment="Center" Width="400">
        <TextBlock Text="Генератор счастливых билетов" 
           FontSize="24" FontWeight="Bold" Foreground="Black" Margin="0,0,0,20"
           HorizontalAlignment="Center"/>
        <TextBlock x:Name="TicketTextBlock" FontSize="18" TextWrapping="Wrap" TextAlignment="Center" />
        <Button Style="{StaticResource RoundedButton}" Content="Сгенерировать билет" Click="GenerateNewTicketButton_Click" 
                Margin="0,20,0,0" Padding="10" />
    </StackPanel>
</Page>
