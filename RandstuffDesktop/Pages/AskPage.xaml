<Page x:Class="RandstuffDesktop.Pages.AskPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Background="#E8F5E9"
      FontFamily="Segoe UI">

    <StackPanel Width="400" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="20">
        <TextBlock Text="Генератор предсказаний" 
                   FontSize="24" FontWeight="Bold" Foreground="Black" Margin="0,0,0,20"
                   HorizontalAlignment="Center"/>

        <TextBox x:Name="QuestionTextBox" 
                 Text="Есть ли смысл жизни?" 
                 FontSize="16" 
                 Margin="0,0,0,10"
                 />

        <Button Style="{StaticResource RoundedButton}" Content="Сгенерировать" 
                Background="#A5D6A7" Foreground="Black" Padding="10" BorderThickness="0" Cursor="Hand" Click="GenerateButton_Click"/>

        <TextBlock x:Name="ResultTextBlock" 
                   Margin="0,20,0,0" FontSize="16" Foreground="Black" TextWrapping="Wrap" Height="150" HorizontalAlignment="Center"
                   />
    </StackPanel>
</Page>
